<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <EditText
        android:id="@+id/weightEditText"
        android:layout_width="238dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/specTitleTextView"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="90dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="15dp"
        android:digits="0123456789"
        android:ems="10"
        android:hint="Weight in grams"
        android:inputType="number"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/specTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="53dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="Meat Specifications"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/subTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/weightEditText"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="126dp"
        android:layout_marginLeft="126dp"
        android:layout_marginTop="14dp"
        android:text="Select Doneness"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="20sp" />

    <Button
        android:id="@+id/doneButton"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/donenessGroup"
        android:layout_centerInParent="true"
        android:layout_marginTop="15dp"
        android:text="Done" />

    <Button
        android:id="@+id/cancelButton"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/doneButton"
        android:layout_alignParentRight="false"
        android:layout_centerInParent="true"
        android:layout_marginTop="15dp"
        android:includeFontPadding="false"
        android:text="@android:string/cancel" />

    <RadioGroup
        android:id="@+id/donenessGroup"
        android:layout_width="127dp"
        android:layout_height="111dp"
        android:layout_below="@+id/subTitleTextView"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp">

        <RadioButton
            android:id="@+id/rareButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rare" />

        <RadioButton
            android:id="@+id/mediumButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Medium" />

        <RadioButton
            android:id="@+id/wellButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Well" />
    </RadioGroup>

</RelativeLayout>
