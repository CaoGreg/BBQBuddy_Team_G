<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="textcolor">@color/textColorLightPrimary</item>
        <item name="listviewbackground">@color/lvcolorlight</item>
        <item name="android:windowBackground">@drawable/backgroud_formatted</item>
        <item name="backgroundcolor">@color/backgroundlight</item>
        <item name="dropdown">@color/dropdownlight</item>
    </style>

    <style name="darktheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="textcolor">@color/textColorDarkPrimary</item>
        <item name="android:windowBackground">@drawable/dark_formatted</item>
        <item name="listviewbackground">@color/lvcolordark</item>
        <item name="backgroundcolor">@color/backgrounddark</item>
        <item name="dropdown">@color/dropdowndark</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="darkactionbartheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="textcolor">@color/textColorDarkPrimary</item>
    <item name="android:windowBackground">@drawable/dark_formatted</item>
    <item name="listviewbackground">@color/lvcolordark</item>
    <item name="backgroundcolor">@color/backgrounddark</item>
    <item name="dropdown">@color/dropdowndark</item>
    </style>

    <style name="lightactionbartheme" parent="ThemeOverlay.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="textcolor">@color/textColorLightPrimary</item>
        <item name="listviewbackground">@color/lvcolorlight</item>
        <item name="android:windowBackground">@drawable/backgroud_formatted</item>
        <item name="backgroundcolor">@color/backgroundlight</item>
        <item name="dropdown">@color/dropdownlight</item>
    </style>

    <style name="TimerTextStyle">
        <item name="android:paddingLeft">4px</item>
        <item name="android:paddingBottom">4px</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">18sp</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">5</item>
        <item name="android:shadowDy">5</item>
        <item name="android:shadowRadius">5</item>
    </style>

</resources>
